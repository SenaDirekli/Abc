
@model IEnumerable<Abc.Mvc.WebUI.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container pb-5">
    <h2>@Abc.Mvc.WebUI.Resources.lang.urun4</h2>
    <hr/>

    <p>
        @Html.ActionLink(@Abc.Mvc.WebUI.Resources.lang.urun3, "Create", null, new { @class = "btn btn-primary" })
    </p>
    <hr />
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th style="width:20%;">@Abc.Mvc.WebUI.Resources.lang.duzenle</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="/Upload/@item.Image" width="70" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>   
        <th>
            @if (item.IsHome)
            {
            <label class="badge badge-success">
                <i class="fa fa-check-circle"></i>
                @Abc.Mvc.WebUI.Resources.lang.evet
            </label>
            }
            else
            {
            <label class="badge badge-danger">
                <i class="fa fa-check-circle"></i>
                @Abc.Mvc.WebUI.Resources.lang.hayır
            </label>
            }
        </th>
        <th>
            @if (item.IsApproved)
            {
            <label class="badge badge-success">
                <i class="fa fa-check-circle"></i>
                @Abc.Mvc.WebUI.Resources.lang.evet
            </label>
            }
            else
            {
            <label class="badge badge-danger">
                <i class="fa fa-check-circle"></i>
                @Abc.Mvc.WebUI.Resources.lang.hayır
            </label>
            }
        </th>
        <td>
            @Html.ActionLink(@Abc.Mvc.WebUI.Resources.lang.guncelle, "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink(@Abc.Mvc.WebUI.Resources.lang.detay, "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
            @Html.ActionLink(@Abc.Mvc.WebUI.Resources.lang.sil, "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
</div>