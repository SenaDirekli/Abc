
@model IEnumerable<Abc.Mvc.WebUI.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
}

<div class="container pb-5">
    <h2>@Abc.Mvc.WebUI.Resources.lang.kategori8</h2>
    <hr />
    <p>
        @Html.ActionLink(@Abc.Mvc.WebUI.Resources.lang.kategori7, "Create", null, new { @class = "btn btn-primary" })
    </p>
    <hr />
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="width:20%;">@Abc.Mvc.WebUI.Resources.lang.duzenle</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink(@Abc.Mvc.WebUI.Resources.lang.guncelle, "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink(@Abc.Mvc.WebUI.Resources.lang.detay, "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink(@Abc.Mvc.WebUI.Resources.lang.sil, "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>